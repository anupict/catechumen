<h3>Approve Staff Leave</h3>

<% form_for(@leaveforstaff) do |f| %>
  <%= f.error_messages %>

<div class="tform">
<%= render :partial => 'applyshow' %>
<table width=100% >
	<tr>
		<td class="leftcol"><label for="replacement_id"><b>Replacement Staff:</b></label></td>
		<td><%=h @leaveforstaff.replacement_id.blank? ? "" : @leaveforstaff.replacement.name %></td>
	</tr>

	<tr>
		<th colspan = 2>Previous Approval for Staff Leave Request</th>
	</tr>

	<tr>
		<td class="leftcol"><label for="approval1"><b>Approve?:</b></label></td>
		<td><%=h @leaveforstaff.approval1? ? "Approved" : "Not Approved" %> by 
				<%=h @leaveforstaff.seconder.name %> on 
				<%=h @leaveforstaff.approval1date.strftime("%d - %b - %Y") %></td>
	</tr>

	<tr>
		<td class="leftcol"><label for="approver2"><b>Approval 2:</b></label></td>
		<td><%= f.radio_button :approver2,'false' %>Not Approved &nbsp<%= f.radio_button :approver2,'true' %>Approve</td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="approval2date"><b>Approved By Date:</b></label></td>
		<td><%= f.date_select :approval2date, :order => [:day, :month, :year], :default => DateTime.now %></td>
	</tr>
</table>
</div>

<p>
<%= f.submit 'Update' %>
</p>

<% end %>


