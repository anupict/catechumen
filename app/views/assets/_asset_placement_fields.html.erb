<div class="fields">
	<table>	
		<tr>
			<th>Location</th>
			<td><%= f.collection_select :location_id, Location.find(:all, :order => :code), :id, :location_list, :include_blank => true, :prompt => 'Location' %></td>
			<td rowspan=3><%= f.hidden_field :_destroy %>
										<%= link_to_remove_fields image_tag("delete.png", :border => 0, :title => 'Remove'), f %></td>
		</tr>
		<tr>
			<th>Assigned To</th>
			<td><%= f.collection_select :staff_id, Staff.find(:all, :order => :name), :id, :name, :include_blank => true, :prompt => 'Staff' %></td>
		</tr>
		<tr>
			<th>Date</th>
			<td><%= f.date_select :reg_on, :end_year => Date.today.year, :order => [:day, :month, :year], :include_blank => true %></td>
		</tr>
	</table>
	<HR>
</div>
