<div class="box">
	<div class="box-head">
		<h2 class="left">Listing Academic Sessions</h2>
	</div>
</div>

<div class="toolbar">
	<p><%= link_to image_tag("add.png", :border => 0, :title => 'New Weekly Timetable') + "New", new_academic_session_path %></p>
</div>

<div class="indextable">
	<table>
	  <tr>
		<th>Semester</th>
    	<th>Total week</th>
		<th colspan=3 class="ac">Control</th>
  	  </tr>

<% @academic_sessions.each do |academic_session| %>
  <tr>
    <td><%=h academic_session.semester %></td>
    <td><%=h academic_session.total_week %></td>
 <td width=10px><%= link_to image_tag("document.png", :border => 0, :title => 'Show'), :action => 'show', :id =>academic_session %></td>
    <td width=10px><%= link_to image_tag("edit.png", :border => 0, :title => 'Edit'), :action => 'edit', :id => academic_session %></td>
 	<td width=10px><%= link_to image_tag("delete.png", :border => 0, :title => 'Delete'), academic_session, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
</div>

<%= link_to 'New academic_session', new_academic_session_path %>