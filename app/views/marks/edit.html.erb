<h1>Editing mark</h1>

<% form_for(@mark) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :exam_id %><br />
    <%= f.text_field :exam_id %>
  </p>
  <p>
    <%= f.label :student_mark %><br />
    <%= f.text_field :student_mark %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @mark %> |
<%= link_to 'Back', marks_path %>