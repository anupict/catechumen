<fieldset>
	<legend class='togvis'>Lesson Plan Details</legend>
		<table width=85% >
			<tr>
				<td class="leftcol"><label>Lecturer:</label></td>
				<td><%=h @lesson_plan.lessonplan_owner.name %></td>				
			</tr>
			<tr>
				<td class="leftcol"><label>Subject</label></td>
				<td>
					<%=h @lesson_plan.schedule_item.weeklytimetable_topic.full_parent %>
					<%#=h @lesson_plan.lessonplan_topic.parent.code %>
				</td>				
			</tr>
			<tr>
				<td class="leftcol"><label>Topic:</label></td>
				<td>
					<%=h @lesson_plan.schedule_item.weeklytimetable_topic.name %>
					<%#=h @lesson_plan.lessonplan_topic.name %>
				</td>				
			</tr>
			<tr>
				<td class="leftcol"><label>Lecture date:</label></td>
				<td><%=h @lesson_plan.schedule_item.get_date_for_lesson_plan %><%#=h @lesson_plan.lecture_date %></td>				
			</tr>
			<tr>
				<td class="leftcol"><label>Time:</label></td>
				<td>
					<%=h @lesson_plan.schedule_item.get_start_time %> - <%=h @lesson_plan.schedule_item.get_end_time %>
					<%#=h @lesson_plan.start_time.strftime("%H:%M") %><!-- - --><%#=h @lesson_plan.end_time.strftime("%H:%M") %>
				</td>				
			</tr>
			<tr>
				<td class="leftcol"><label>Intake:</label></td>
				<td>Group <%=h @lesson_plan.schedule_item.weeklytimetable.schedule_intake.group_with_intake_name %>
					<%#=h @lesson_plan.lessonplan_intake.group_with_intake_name%>	
				</td>				
			</tr>
			<tr>
				<td class="leftcol"><label>Year/Semester:</label></td>
				<td><%=h @lesson_plan.year %>/<%=h @lesson_plan.semester %></td>				
			</tr>
			<tr>
				<td class="leftcol"><label>Student qty:</label></td>
				<td><%=h @lesson_plan.student_qty %></td>				
			</tr>	
			<tr>
				<td class="leftcol"><label>Location:</label></td>
				<td><%=h @lesson_plan.schedule_item.weeklytimetable_location.name %></td>				
			</tr>
		</table>
</fieldset>
