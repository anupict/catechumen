<table width=60%>
<tr>
	<td><b><%= f.label :travelday, "Date" %></b></td>
	<td><%= f.date_select :travelday %></td>
</tr> 
<tr>
	<td><b><%= f.label :departure, "Departure :" %></b></td>
	<td><%= f.time_select :departure, :minute_step => 5 %> &nbsp &nbsp &nbsp &nbsp &nbsp
	<b><%= f.label :arrival, "Arrival :" %></b>
	   <%= f.time_select :arrival, :minute_step => 5 %></td>
</tr>


