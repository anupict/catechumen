	<td><b><%= f.label :description, "Description" %></b></td>
	<td><%= f.text_area :description, :rows => 3 %></td>
</tr>  
<tr>   
	<td><b><%= f.label :distance, "Distance" %></b></td>
	<td>   <%= f.text_field :distance, :size => 5 %>km or &nbsp &nbsp &nbsp &nbsp &nbsp
	    <b><%= f.label :fare, "Fare" %> </b> 
