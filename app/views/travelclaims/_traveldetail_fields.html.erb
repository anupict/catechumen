	<td><b><%= f.label :lodging, "Allowances" %></b></td>
	<td><b><%= f.label :lodging, "Lodging" %></b>
		     <%= f.check_box :lodging %>&nbsp &nbsp &nbsp &nbsp &nbsp
	    <b><%= f.label :meals, "Meals" %></b>
	       <%= f.check_box :meals %>&nbsp &nbsp &nbsp &nbsp &nbsp
	    <b><%= f.label :dinner, "Dinner" %></b>
	       <%= f.check_box :dinner %></td>
</tr> 
