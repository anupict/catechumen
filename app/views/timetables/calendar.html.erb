<% if @timetables == [] %>
<% else %>
<div class="box">
	<!-- Box Head -->
	<div class="box-head">
		<h2 class="left">Timetable Calendar</h2>
		<div class="right"><%= link_to image_tag("application_form_add.png", :border => 0), {:controller => 'timetables', :action => 'new'} %></div>
	</div>


<div id="calendar">
  <h2 id="month">
    <%= link_to "<", :month => (@date.beginning_of_month-1).strftime("%Y-%m") %>
    <%=h @date.strftime("%B %Y") %>
    <%= link_to ">", :month => (@date.end_of_month+1).strftime("%Y-%m") %>
  </h2>

  	<% calendar_for @timetables, :year => @date.year, :month => @date.month do |calendar| %>
    <%= calendar.head('Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday') %>
    <% calendar.day(:day_method => :start_at) do |date, timetables| %>
    <%= date.day %>
				
			      <ul>
			        <% for timetable in timetables %>
			          <li><%= link_to h(timetable.tt_entry), timetable %></li>
			        <% end %>
			      </ul>
				
    <% end %>
  <% end %>
</div>
<% end %>
</div>



