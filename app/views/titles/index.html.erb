<div class="box">
	<div class="box-head">
		<h2 class="left">Lists of Titles</h2>
	</div>
</div>

<div class="toolbar">
	<p><%= link_to image_tag("add.png", :border => 0, :title => 'Register Loss/Write Off') + "New", new_title_path %></p>
</div>

<div class="indextable">
<table>
	<tr>
		<th>Title Code</th>
		<th>Title</th>
		<th colspan=3 class="ac">Control</th>
	</tr>

	<% @titles.each do |title| %>
  <tr>
    <td><%=h title.titlecode %></td>
    <td><%=h title.berhormat? ? "Yang Berhormat  " : "" %><%=h title.name %></td>
    <td width=10px><%= link_to image_tag("edit.png", :border => 0, :title => 'Edit'), :action => 'edit', :id => title %></td>
    <td width=10px><%= link_to image_tag("delete.png", :border => 0, :title => 'Delete'), title, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
</div>
<br />

<%= link_to 'New Title', new_title_path %>