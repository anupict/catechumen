      $j("#popo_action").show(); 
      $j("#no_report_why").hide(); 
    } );

		$j("input[id='staff_suspension_false']").change(function() {  
      $j("#sostopdt").hide(); 
    } );
		$j("input[id='staff_suspension_true']").change(function() {  
      $j("#sostopdt").show("slide"); 
    } );

		$j("input[id='super_suspension_false']").change(function() {  
