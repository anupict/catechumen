<div class="box">
	<div class="box-head">
		<h2 class="left">Staff Shifts</h2>
	</div>
</div>

<div class="toolbar">
	<table style="width:60%;"><tr>
		<td><p><%= link_to image_tag("add.png", :border => 0, :title => 'Create a new Shift') + "New Shift", new_staff_shift_path %></p></td>
	</tr></table>
</div>
	
<div class="indextable">
	<table style="width:60%;">
  <tr>
    <th>Name</th>
    <th>Start at</th>
    <th>End at</th>
		<th colspan=3 class="ac">Control</th>
  </tr>

	<% @staff_shifts.each do |staff_shift| %>
  <tr>
    <td><%=h staff_shift.name %></td>
    <td><%=h l(staff_shift.start_at) %></td>
    <td><%=h l(staff_shift.end_at) %></td>
    <!--<td width=10px><%= link_to image_tag("document.png",:border => 0), :action => 'show', :id => staff_shift %></td>-->
		<td width=10px><%= link_to image_tag("edit.png", 		:border => 0), :action => 'edit', :id => staff_shift %></td>
	  <td width=10px><%= link_to image_tag("delete.png", 	:border => 0, :title => 'Delete'), staff_shift, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
</div>