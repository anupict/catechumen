<div class="box">
	<div class="box-head">
		<h2 class="left">My Travel Logs</h2>
	</div>
</div>

<div class="indextable">
	<table>
		<tr>
			<th>Code</th>
			<th><%= t 'travel.sname' %></th>
			<th><%= t 'travel.destination' %></th>
			<th>Depart at</th>
			<th><%= t 'travel.purpose' %></th>
			<th>Approved</th>
			<th colspan=4 class="ac">Control</th>
		</tr>
		
		<% @my_approved_requests.each do |my_approved_request| %>
		<tr>
			<td><%=h my_approved_request.document.refno %></td>
   		<td><%=h my_approved_request.applicant.staff_name_with_position unless my_approved_request.applicant.blank? %></td>
      <td><%=h my_approved_request.destination %></td>
      <td><%=h l(my_approved_request.depart_at) %></td>
      <td><%=h my_approved_request.document.title %></td>
			<td><%=h my_approved_request.hod_accept? ? image_tag("tick.png") : image_tag("cross.png") %></td>
      <td width=10px ><%= link_to image_tag("document.png", :border => 0), :action => 'show', :id => my_approved_request %></td>
			<td width=10px><%= link_to image_tag("edit.png", :border => 0), :action => 'travel_log', :id => my_approved_request %></td>
    </tr>
    <% end %>
	</table>
</div>

<BR/>

<%= link_to 'New travel_request', new_travel_request_path %>